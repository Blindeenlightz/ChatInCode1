<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/palette_light"
    android:columnCount="2"
    android:rowCount="3"
    tools:context=".PigLatinActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_row="0"
        android:layout_rowWeight="3"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/subCipherTitle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/palette_high"
            android:gravity="center"
            android:text="@string/pigLatinTitle"
            android:textAlignment="gravity"
            android:textAllCaps="true"
            android:textColor="#0288D1"
            android:textSize="40sp"
            android:textStyle="bold|italic" />

        <ImageView
            android:id="@+id/subCipherImg"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/palette_high"
            app:srcCompat="@drawable/smart_pig_cropped__phone__transparent3"
            android:contentDescription="@string/pigImgDescrip"
            tools:ignore="ImageContrastCheck" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_row="1"
        android:layout_rowWeight="7"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:background="@color/palette_light"
        android:orientation="vertical"
        android:weightSum="9.5">


        <TextView
            android:id="@+id/inputLbl"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/yourMessageLbl"
            android:textAlignment="gravity"
            android:textColor="@color/palette_dark"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/inputTxtBox"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="3"
            android:background="@color/material_dynamic_neutral99"
            android:ems="10"
            android:hint="@string/enterMessHint"
            android:importantForAutofill="no"
            android:inputType="textMultiLine"
            android:gravity="top"
            android:textColor="@color/palette_dark"
            android:textColorHint="#8D6E63" />


        <Button
            android:id="@+id/encrypt_decryptBtn"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_weight="1.5"
            android:backgroundTint="@color/palette_mid"
            android:text="@string/encryptBtn"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/outputLbl"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/yourCiphLbl"
            android:textAlignment="gravity"
            android:textColor="@color/palette_dark"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/outputTxtBox"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="50dp"
            android:layout_weight="3"
            android:background="@color/material_dynamic_neutral99"
            android:ems="10"
            android:importantForAutofill="no"
            android:inputType="none"
            android:gravity="top"
            android:textColor="@color/palette_dark"
            tools:ignore="SpeakableTextPresentCheck" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_row="2"
        android:layout_rowWeight="1"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_marginTop="5dp"
        android:background="@color/palette_light"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:id="@+id/copyBtn"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/palette_mid"
            android:text="@string/copyBtn"
            android:textColor="#000000" />

        <Button
            android:id="@+id/saveBtn"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/palette_mid"
            android:text="@string/saveBtn"
            android:textColor="#000000" />

        <Button
            android:id="@+id/shareBtn"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/palette_mid"
            android:text="@string/shareBtn"
            android:textColor="#000000" />

        <Button
            android:id="@+id/resetBtn"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/palette_mid"
            android:text="@string/resetBtn"
            android:textColor="#000000" />

    </LinearLayout>


</GridLayout>


