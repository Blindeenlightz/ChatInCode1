<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tutorial"
    android:background="@color/palette_light"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="194dp"
        android:layout_weight="1"
        android:background="@color/palette_light">

        <ImageView
            android:id="@+id/subCipherImg"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/tutorialTitleDescr"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/codescreen__phone_"
            tools:srcCompat="@drawable/codescreen__phone_" />

        <TextView
            android:id="@+id/outputLbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/instructTitle"
            android:textAlignment="center"
            android:textColor="@color/palette_light"
            android:textSize="40sp"
            android:textStyle="bold" />

    </FrameLayout>

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="8">

    <TextView
        android:id="@+id/caesTutLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_weight="1"
        android:backgroundTint="@color/palette_mid"
        android:text="@string/caesarTutTxt"
        android:textColor="@color/palette_dark"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/pigTutLbl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pigTutLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="16dp"
        android:layout_weight="1"
        android:backgroundTint="@color/palette_mid"
        android:text="@string/pigTutTxt"
        android:textColor="@color/palette_dark"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/subTutLbl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/caesTutLbl" />

    <TextView
        android:id="@+id/subTutLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="16dp"
        android:layout_weight="1"
        android:backgroundTint="@color/palette_mid"
        android:text="@string/subTutTxt"
        android:textColor="@color/palette_dark"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/homeBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pigTutLbl" />

    <Button
        android:id="@+id/homeBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/palette_mid"
        android:text="@string/homeBtn"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>






</LinearLayout>


